<script type="text/javascript">
	$(document).ready(function(){
    <% if(data.length !=0) { %>
    <%var date = new Array()%>
    <%var temperature = new Array()%>
    <%var water = new Array()%>
    <%var ph = new Array()%>
      <% for(var i=0; i<data.length; i++) { %>
        <% var dateObj = new Date(data[i].createdAt); %>
        <% var minutes =  dateObj.getMinutes(); %>
        <% if(minutes < 10) { %>
          <% minutes = "0" + minutes; %>
        <% } %>
        <% date.push(dateObj.getTime()); %>
		    <% temperature.push(data[i].temperature);%>
		    <% water.push(data[i].waterlevel);%>
		    <% ph.push(data[i].ph);%>
    <%}%>
		<%}%>
    Highcharts.chart('chart', {
      chart: {
        zoomType: 'xy'
      },
      title: {
        text: 'Reporting graphique des données envoyées par l\'Arduino'
      },
      xAxis: [{
        type: 'datetime',
        categories: [<%= date %>],
        crosshair: true,
        labels: {
          formatter: function() {
              var dateToString = Highcharts.dateFormat('%m-%d-%Y %H:%M:%S', this.value);
              return dateToString;
          }
        }
      }],
      yAxis: [{ // Primary yAxis
        labels: {
          format: '{value} °C',
          style: {
            color: Highcharts.getOptions().colors[2]
          }
        },
        title: {
          text: 'Température',
          style: {
            color: Highcharts.getOptions().colors[2]
          }
        },
        opposite: true

      }, { // Secondary yAxis
        gridLineWidth: 0,
        title: {
          text: "Niveau d'eau",
          style: {
            color: Highcharts.getOptions().colors[0]
          }
        },
        labels: {
          format: '{value} cm',
          style: {
            color: Highcharts.getOptions().colors[0]
          }
        }

      }, { // Tertiary yAxis
        gridLineWidth: 0,
        title: {
          text: 'pH',
          style: {
            color: Highcharts.getOptions().colors[1]
          }
        },
        labels: {
          format: '{value}',
          style: {
            color: Highcharts.getOptions().colors[1]
          }
        },
        opposite: true
      }],
        tooltip: {
        shared: true
      },
      legend: {
        layout: 'vertical',
          align: 'left',
          x: 80,
          verticalAlign: 'top',
          y: 55,
          floating: true,
          backgroundColor: (Highcharts.theme && Highcharts.theme.legendBackgroundColor) || '#FFFFFF'
      },
      series: [{
        name: "Niveau d'eau",
        type: 'column',
        yAxis: 1,
        data: [<%= water %>],
        tooltip: {
          valueSuffix: ' cm'
        }

      }, {
        name: 'pH',
        type: 'spline',
        yAxis: 2,
        data: [<%= ph %>],
        marker: {
          enabled: false
        },
        dashStyle: 'shortdot',
        tooltip: {
          valueSuffix: ''
        }

      }, {
        name: 'Température',
        type: 'spline',
        data: [<%= temperature %>],
        tooltip: {
          valueSuffix: ' °C'
        }
      }]
    });
	});
</script>

