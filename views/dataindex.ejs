<div class="col-md-12">
  <div class="row">

    <div class="col-md-12">
      <div class="card">
      
        <div class="header">
          <div class="row">
            <div class="col-md-12">
                <h4 class="title">Données</h4>
            </div>
          </div>
        </div>

        <div class="content table-responsive">
            <table class="table table-hover table-striped" id="dataTable">
              <thead>
                <td>Date</td>
                <td>Température (°C)</td>
                <td>Niveau d'eau (cm)</td>
                <td>Humidité (%)</td>
              </thead>
              <tbody id="results">

                 <% if(data.length !=0) { %>
                  <% for(var i=0; i<data.length; i++) { %>
                    <tr>
                        <% var monthNames = ["Janvier", "Février", "Mars", "Avril", "Mai", "Juin", "Juillet", "Aout", "Septembre", "Octobre", "Novembre", "Decembre"]; %>
                        <% var dateObj = new Date(data[i].createdAt); %>
                        <% var date = dateObj.getDate() + " " + monthNames[dateObj.getMonth()] + " " + dateObj.getFullYear() + " à " + dateObj.getHours()+ "h" + dateObj.getMinutes() + "min et " + dateObj.getSeconds() + "secs"; %>

                        <td> <%= date %> </td>
                        <td> <%= data[i].temperature %> </td>
                        <td> <%= data[i].waterlevel %> </td>
                        <td> <%= data[i].humidity %> </td>
                    </tr>
                  <% } %>
                <% } else { %>
                  <tr>
                    <td> Aucune donnée trouvée </td>
                  </tr>
                <% } %>

              </tbody>
            </table>  
        </div>
      </div>
    </div>
  </div>
</div>
